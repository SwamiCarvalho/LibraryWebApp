@model LibraryAPI.Resources.GenreResource

@{
    ViewData["Title"] = "Details";
    var feedback = ViewData["Feedback"] as string;
}

<h1>Details</h1>

<h2 class="alert-success">@ViewBag.Feedback</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @if (this.User.IsInRole("Librarian") || this.User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model.GenreId">Edit</a> <span>|</span>
     }
    <a asp-action="Index">Back to List</a>
</div>
