@model LibraryAPI.Resources.BookDetailsResource

@{ 
    ViewData["Title"] = "Booking " + Model.Title;
}

<h1>Confirm Booking</h1>

<h3>You are about to book the following book:</h3>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OgTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OgTitle)
        </dd>
    </dl>

    <h4>Are you sure?</h4>

    <form asp-controller="Bookings" asp-action="Add">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Confirm" class="btn btn-warning" /> |
        <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-danger">Cancel</a>
    </form>
</div>
