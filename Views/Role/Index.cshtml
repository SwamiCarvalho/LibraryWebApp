@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

@if (ViewBag.MyRole == "Librarian" || ViewBag.MyRole == "Administrator")
{
    <h1>List of Roles</h1>
    <a asp-action="Create">Create</a>
    @if (Model.Count() == 0)
    {
        <h2 class="text-center align-baseline">There is no Roles, start by creating one before deployment.</h2>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <h2 class="text-center align-baseline">There is no Roles, start by creating one before deployment.</h2>
                }
                else
                {
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <form asp-controller="Role" asp-action="Delete">
                                    <input type="hidden" name="RoleName" value="@role.Name" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}

@if (ViewBag.MyRole != null)
{
    <h2 class="text-center align-baseline">
        My role is @foreach (var myRole in ViewBag.MyRole)
        {@myRole}
    </h2>
}
else
{
    <h2 class="text-center align-baseline">@ViewBag.Feedback<br />I don't think you should have access to this o.O .</h2>
}

