@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<h1>List of Roles</h1>
<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <form asp-controller="Role" asp-action="Delete">
                    <input type="hidden" name="RoleName" value="@role.Name" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
        </tr>

        }
    </tbody>
</table>

<h2 class="text-center align-baseline">My role is @foreach (var role in ViewBag.MyRole) { @role }</h2>